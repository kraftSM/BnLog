@using BnLog.DAL.Models.Entity;
@model List<Tag>

        @{
              @if (Model.Count() == 0)
              {
                   <h5 class="card-title">Нет данных для отображения</h5>
                   <h6 class="card-title"><a method="get" asp-controller="Tag" asp-action="CreateTag">Добавить тег</a></h6>
              }
              else
              {
                  <h5 class="card-title">Все теги</h5>
                  
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Tag Name</th>
                        <th><a method="get" asp-controller="Tag" asp-action="CreateTag">Добавить тег</a></th>
                       </tr>
                     </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>                        
                        <td>
                            <a method="get" asp-controller="Tag" asp-action="EditTag" asp-route-id="@item.Id">Edit</a> |
                            <a method="get" asp-controller="Tag" asp-action="ViewTag" asp-route-id="@item.Id">Details</a> |
                            <a method="post" asp-controller="Tag" asp-action="RemoveTag" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                    }
                    </tbody>
                  </table>
              }
        }
